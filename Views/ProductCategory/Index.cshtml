@model ShopOnline.Models.ViewModels.ViewProductCategoryModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .ellipsis{
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .modal-dialog{
        max-width: 1200px;
    }
    #editModal .form-input{
        width: 300px;
        margin-left: 50px;
    }
    
</style> 
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-hover" style="table-layout: fixed">
    <thead>
        <tr>
            <th style="width: 10%" class="">
                @Html.DisplayNameFor(model => model.ProductCategories[0].Name)
            </th>
            <th style="width: 10%" class="">
                @Html.DisplayNameFor(model => model.ProductCategories[0].Alias)
            </th>
            <th style="width: 10%" class="">
                @Html.DisplayNameFor(model => model.ProductCategories[0].Description)
            </th>
            <th style="width: 6%" class="">
                @Html.DisplayNameFor(model => model.ProductCategories[0].ParentID)
            </th>
            <th style="width: 8%" class="">
                @Html.DisplayNameFor(model => model.ProductCategories[0].DisplayOrder)
            </th>
            <th style="width: 6%" class="">
                @Html.DisplayNameFor(model => model.ProductCategories[0].Image)
            </th>
            <th style="width: 5%" class="">
                @Html.DisplayNameFor(model => model.ProductCategories[0].HomeFlag)
            </th>
            <th style="width: 10%" class="">
                @Html.DisplayNameFor(model => model.ProductCategories[0].CreatedDate)
            </th>
            <th style="width: 10%" class="">
                @Html.DisplayNameFor(model => model.ProductCategories[0].CreatedBy)
            </th>
            <th style="width: 10%" class="">
                @Html.DisplayNameFor(model => model.ProductCategories[0].UpdatedDate)
            </th>
            <th style="width: 10%" class="">
                @Html.DisplayNameFor(model => model.ProductCategories[0].UpdatedBy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProductCategories) {
        <tr>
                <td style="width: 10%" class="ellipsis">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td style="width: 10%" class="ellipsis">
                @Html.DisplayFor(modelItem => item.Alias)
            </td>
                <td style="width: 10%" class="ellipsis">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
                <td style="width: 6%" class="ellipsis">
                @Html.DisplayFor(modelItem => item.ParentID)
            </td>
                <td style="width: 8%" class="ellipsis">
                @Html.DisplayFor(modelItem => item.DisplayOrder)
            </td>
             <td style="width: 6%" class="ellipsis">
                @Html.DisplayFor(modelItem => item.Image)
            </td >
                <td style="width: 5%" class="ellipsis">
                @Html.DisplayFor(modelItem => item.HomeFlag)
            </td>
                <td style="width: 10%" class="ellipsis">
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
                <td style="width: 5%" class="ellipsis">
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
                <td style="width: 10%" class="ellipsis">
                @Html.DisplayFor(modelItem => item.UpdatedDate)
            </td>
                <td style="width: 5%" class="ellipsis">
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
                <td>
                    <button onclick="Edit(@item.ID)" class="btn btn-primary">Edit</button>
            </td>
        </tr>
}
    </tbody>
</table>

<!-- Modal -->

<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editForm" asp-action="Edit" method="post">
            <div class="modal-body">
                
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="d-flex w-100">
                        <div class="form-group form-input">
                            <label asp-for="CreateOrUpdate.Name"></label>
                            <input id="update_Name" asp-for="CreateOrUpdate.Name" class="form-control" />
                            <span asp-validation-for="CreateOrUpdate.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group form-input">
                            <label asp-for="CreateOrUpdate.Description"></label>
                            <input id="update_Description" asp-for="CreateOrUpdate.Description" class="form-control" />
                            <span asp-validation-for="CreateOrUpdate.Description" class="text-danger"></span>
                        </div>

                        <div class="form-group form-input">
                            <label asp-for="CreateOrUpdate.Alias"></label>
                            <input id="update_Alias" asp-for="CreateOrUpdate.Alias" class="form-control" />
                            <span asp-validation-for="CreateOrUpdate.Alias" class="text-danger"></span>
                        </div>
                    </div>

                     <div class="d-flex w-100">
                        <div class="form-group form-input">
                            <label asp-for="CreateOrUpdate.ParentID"></label>
                            <input id="update_ParentID" asp-for="CreateOrUpdate.ParentID" class="form-control" />
                            <span asp-validation-for="CreateOrUpdate.ParentID" class="text-danger"></span>
                        </div>
                        <div class="form-group form-input">
                            <label asp-for="CreateOrUpdate.Image"></label>
                            <input id="update_Image" asp-for="CreateOrUpdate.Image" class="form-control" />
                            <span asp-validation-for="CreateOrUpdate.Image" class="text-danger"></span>
                        </div>

                        <div class="form-group form-input">
                            <label asp-for="CreateOrUpdate.DisplayOrder"></label>
                            <input id="update_DisplayOrder" asp-for="CreateOrUpdate.DisplayOrder" class="form-control" />
                            <span asp-validation-for="CreateOrUpdate.DisplayOrder" class="text-danger"></span>
                        </div>

                        
                    </div>
                    <div class="d-flex w-100">
                        <div class="form-group form-input">
                        <label asp-for="CreateOrUpdate.HomeFlag"></label>
                            <input id="update_HomeFlag" asp-for="CreateOrUpdate.HomeFlag" class="form-control" />
                        <span asp-validation-for="CreateOrUpdate.HomeFlag" class="text-danger"></span>
                        </div>
                    </div>

                    

                    <input type="hidden" id="categoryId" name="categoryId" />
                    <!-- Include other form fields for editing -->
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    <script>
      $(document).ready(function(){

       });


       var Edit = function(id){
           $.ajax({
                url: '@Url.Action("Edit", "ProductCategory")/' + id,
                type: 'GET'
            })
            .done(function(response){
                // Populate the modal form fields with the values from the JSON response
                console.log(response)
                $('#update_Name').val(response.name);
                $('#update_Description').val(response.description);
                $('#update_Alias').val(response.alias);
                    $('#update_ParentID').val(response.parentid);
                    $('#update_Image').val(response.image);
                    $('#update_DisplayOrder').val(response.displayorder);
                    $('#update_HomeFlag').val(response.homeflag);

                $('#categoryId').val(response.id);

                $('#editModal').modal('show');
            })
            .fail(function(xhr, status, error){
                console.log(error);
            });
        }
    </script>
    
}
