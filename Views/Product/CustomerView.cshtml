@section Scripts{
    <script>
        $(document).ready(function () {
            // To take the searchKey from first Form to second form
            var textSearchInput = $('#textSearch');
            var hiddenSearchKeyInput = $('#hiddenSearchKey');
            textSearchInput.on('input', function () {
                // Update the value of hiddenSearchKey to match the textSearch input
                hiddenSearchKeyInput.val($(this).val());
            });

        });
        


    </script>
