@page
@model ShopOnline.Areas.Admin.Pages.Role.DeleteModel
@{
    ViewData["Title"] = "Delete role";
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <p>Are you sure delete Role <strong>@Model.Input.Name</strong> </p>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden"  asp-for="Input.ID">
            <input type="hidden"  asp-for="isConfirmed">
            <a class="btn btn-primary mt-3" asp-page="./Index">List</a>
            <button type="submit" asp-page="./Delete" class="btn btn-danger mt-3">Delete</button>
        </form>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}